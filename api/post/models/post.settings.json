{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "posts"
    },
    "slug": {
      "type": "string",
      "required": true,
      "regex": "a-z0-9-"
    }
  }
}
